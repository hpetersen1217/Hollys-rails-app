<h1>All Posts</h1>
<% if can? :create, Post %>
    <%= link_to "New Post", new_post_path %>
<% end %>
<% @posts.each do |post| %>
    <h4>
        <%= link_to post.title, post %>
    </h4>
    <small>
        submitted <%= time_ago_in_words(post.created_at) %> ago by <%= post.user.name %><br/>
    </small>
<% end %>

